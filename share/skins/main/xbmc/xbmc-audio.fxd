                        <goto_pos x="500" mode="absolute"/>
                        <text align="left" font="info value blue">Bitrate </text>
                        <goto_pos x="600" mode="absolute"/>
                        <text font="info plot white" expression="bitrate"/>
                        <text align="left" font="info plot white"> kbps</text>
                        <newline/>
