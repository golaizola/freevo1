                </item>

                <item type="playlist">

                    <if expression="name">
                        <text font="info subtitle" expression="name"/>
                        <newline/>
                    </if>

                    <goto_pos x="0" y="60" mode="absolute"/>

                    <if expression="len(playlist)">
